<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans.xsd  
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
        ">
    <bean id="mailService"
          class="cn.sinjinsong.skeleton.service.impl.MailServiceImpl"/>
    <!-- 消费者应用信息，用于提供依赖关系 -->
    <dubbo:application name="mail_provider"/>
    <!-- 注册地址，用于消费者寻找服务 -->
    <dubbo:registry protocol="zookeeper" address="192.168.1.118:2181,192.168.1.119:2181,192.168.1.120:2181"/>
    <dubbo:consumer timeout="5000"/>
    <!-- 引用的服务 -->
    <dubbo:reference id="userService" interface="cn.sinjinsong.skeleton.service.UserService" version="1.0.0"/>
    <dubbo:protocol name="dubbo" port="20881" serialization="java"/>
    <dubbo:service interface="cn.sinjinsong.skeleton.service.MailService" version="1.0.0"
                   ref="mailService"/>
</beans>